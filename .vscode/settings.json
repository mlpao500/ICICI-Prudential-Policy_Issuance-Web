// Place your settings in this file to overwrite default and user settings.
{
    "html.suggest.html5": true,
    "eslint.enable": false,
    "javascript.validate.enable": false,
    "standard.enable": true,
    "standard.run": "onType",
    "standard.validate": [
        "javascript",
        "javascriptreact"
    ],
    "standard.options": {
      "globals": ["$", "jQ", "fetch"],
      "ignore": [
          "node_modules/**"
      ],
      "plugins": ["html"],
      "parser": "babel-eslint"
  },
  "beautify.config": {
    "indent_size": 2,
    "indent_char": " ",
    "css": {
      "indent_size": 2
    }
  },
  "editor.insertSpaces": false,
  "editor.tabSize": 2,
  "editor.detectIndentation": false
}